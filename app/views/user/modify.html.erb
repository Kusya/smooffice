<html>
	<head>
		<title> Modify </title>
		<%= stylesheet_link_tag 'stylesheet' %>
	</head>
	<body>
		<h1>Edit your profil</h1>
		<% form_for :user do |form| %>
			<table cellspacing="20">
				<tr>
					<td><label for="user_lastname">lastname:</label></td>
					<td><%= form.text_field :lastname, :size => 25 %></td>
				</tr>
				<tr>
					<td><label for="user_firstname">firstname:</label></td>
					<td><%= form.text_field :firstname, :size => 25 %></td>
				</tr>
				<tr>
					<td><label for="user_email">E-mail:</label></td>
					<td><%= form.text_field :email, :size => 40 %></td>
				</tr>
				<tr>
					<td><label for="user_Login">Login:</label></td>
					<td><%= form.text_field :name, :size => 25 %></td>
				</tr>
				<tr>
					<td colspan="2" align="center"><%= submit_tag "Modify", :class => "submit" %></td>
				</tr>
			</table>
		<% end %>
		<%= link_to "Home", :controller => 'index', :action => 'get' %>
	</body>
</html>
