<html>
	<head>
		<title>List of users</title>
		<%= stylesheet_link_tag 'stylesheet' %>
	</head>
	<body>
		<h1>Administrators</h1>
		<ul>
			<% for user in @all_users %>
			<li>
				<%= link_to "[X]", { # link_to options
										:controller => 'user',
										:action => 'delete',
										:id => user},
										{ # html options
										:method => :post,
										:confirm => "Really delete #{user.name}?"
									} %>
				<%= h(user.name) %>
			</li>
			<% end %>
		</ul>
		<br /><br /><br />
		<%= link_to "Home", :controller => 'index', :action => 'get' %>
		<%= link_to "Add a user", :controller => 'user', :action => 'add' %>
	</body>
</html>