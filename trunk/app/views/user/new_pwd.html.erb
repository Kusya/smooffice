<html>
	<head>
		<title> New password </title>
		<%= stylesheet_link_tag 'stylesheet' %>
	</head>
	<body>
		<h1> Change your password </h1>
		<%= session[:error] %>
		<% session[:error] = "" %>
		<% form_for :user do |form| %>
			<table cellspacing="20">
				<tr>
					<td><label for="old_password">Old password:</label></td>
					<td><%= password_field :old, :pass, :size => '25' %></td>
				</tr>
				<tr>
					<td><label for="new_password">New password:</label></td>
					<td><%= form.password_field :password, :size => '25' %></td>
				</tr>
				<tr>
					<td><label for="new_password_confirmation">Confirm:</label></td>
					<td><%= form.password_field :password_confirmation, :size => '25' %></td>
				</tr>
				<tr>
					<td colspan="2" align="center"><%= submit_tag "Submit", :class => "submit" %></td>
				</tr>
			</table>
		<% end %>
		<%= link_to "Home", :controller => 'index', :action => 'get' %>
	</body>
</html>