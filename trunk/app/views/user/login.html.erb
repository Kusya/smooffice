<html>
	<head>
		<title>Log in</title>
		<%= stylesheet_link_tag 'authentification' %>
	</head>
	<body>
		<h1> Welcome </h1>
		<% form_tag do %>
			<table>
				<tr>
					<td><label for="name">Name:</label></td>
					<td><%= text_field_tag :name, params[:name] %></td>
				</tr>
				<tr>
					<td><label for="password">Password:</label></td>
					<td><%= password_field_tag :password, params[:password] %></td>
				</tr>
				<tr>
					<td colspan="2" align="center"><%= submit_tag "Login" %></td>
				</tr>
			</table>
		<% end %>
	</body>
</html>
