<html>
    <head>
        <title>Smooffice Lemon 1.0 - Log in</title>
        <!--%= stylesheet_link_tag 'authentification' %-->
        <style type="text/css" media="all">
        	*{
        		margin:0;
				padding:0;
        	}
			
            body {
                font: normal 10px arial, tahoma, sans-serif;
            }
            
            #login-mask {
                position: absolute;
                left: 0;
                top: 0;
                width: 100%;
                height: 100%;
                background: white url('/images/smoothies.jpg') no-repeat right bottom;
            }
            
            #login-panel {
                position: absolute;
                left: 40%;
                top: 35%;
                height: auto;
                border: 1px solid #bbb;
                background: transparent;
                color: #444;
                padding: 10px;
                margin: 0;
            }
            
            #login-panel-title {
                font: bold 13px tahoma, arial, helvetica;
                margin-bottom: 10px;
            }
            
            #login-panel-msg label {
                font: normal 10px arial, tahoma, sans-serif;
            }
        </style>
    </head>
    <body>
        <div id="login-mask">
        </div>
        <div id="login-panel">
            <div id="login-panel-title">
                Smooffice Lemon 1.0
            </div>
            <div id="login-panel-msg">
                <% form_tag do %>
                <table>
                    <tr>
                        <td>
                            <label for="name">
                                Username:
                            </label>
                        </td>
                        <td>
                            <%= text_field_tag :name, params[:name] %>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label for="password">
                                Password:
                            </label>
                        </td>
                        <td>
                            <%= password_field_tag :password, params[:password] %>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" align="center">
                            <%= submit_tag "Login" %>
                        </td>
                    </tr>
                </table>
                <% end %>
            </div>
        </div>
    </body>
</html>
