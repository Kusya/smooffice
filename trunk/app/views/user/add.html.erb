<html>
	<head>
		<title>Create an user</title>
		<%= stylesheet_link_tag 'authentification' %>
	</head>
	<body>
		<div class="depot-form">
			<%= error_messages_for 'user' %>
			<h1> Create a new user </h1>
				<% form_for :user do |form| %>
				<table cellspacing="20">
					<tr>
						<td><label for="user_lastname">lastname:</label></td>
						<td><%= form.text_field :lastname, :size => 25 %></td>
					</tr>
					<tr>
						<td><label for="user_firstname">firstname:</label></td>
						<td><%= form.text_field :firstname, :size => 25 %></td>
					</tr>
					<tr>
						<td><label for="email">E-mail:</label></td>
						<td><%= form.text_field :email, :size => 40 %></td>
					</tr>
					<tr>
						<td><label for="user_Login">Login:</label></td>
						<td><%= form.text_field :name, :size => 25 %></td>
					</tr>
					<tr>
						<td><label for="user_password">Password:</label></td>
						<td><%= form.password_field :password, :size => 25 %></td>
					</tr>
					<tr>
						<td><label for="user_password_confirmation">Confirm:</label></td>
						<td><%= form.password_field :password_confirmation, :size => 25 %></td>
					<tr>
					<tr>
						<td colspan="2" align="center"><%= submit_tag "Add User", :class => "submit" %></td>
					</tr>
				</table>
			<% end %>
		</div>
	</body>
</html>
